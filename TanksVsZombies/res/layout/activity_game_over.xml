<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/game_over_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/game_over_title"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#ffffff" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/game_over_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/game_over_username"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/game_over_username_text"
            android:inputType="textPersonName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/game_over_username_default"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#ffffff" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/game_over_puntuacion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/game_over_puntuacionStr"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/game_over_score"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/game_over_puntuacion"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#ffffff" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/game_over_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/game_over_text"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/game_over_share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/button_facebook"
            android:gravity="center"
            android:onClick="facebookShare"
            android:padding="5dp"
            android:text="@string/game_over_textButton"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#FFFFFF" />
    </TableRow>

</TableLayout>